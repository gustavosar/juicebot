.shipping
    font-size 0.57em
    background #000000
    border-radius 10px
    width 210px
    height 42px 
    color #fff
    display flex
    justify-content center
    align-content center
    align-items center
    position absolute
    top 70%
    left 20%
    text-transform: uppercase

.shipping-img
    width 6.5%
    margin-left 7px
    margin-top -0.13em

@media (max-width: 480px)
    .swiper-button-next
    .swiper-button-prev
    .swiper-pagination
        display none !important
