.txt-juice
    position absolute
    top 63%
    right 21%
    text-align left
    width 300px

    h1
        font-size 1.6em
        font-weight 300
        margin 0 0 10px 0
        width 100%
        span
            font-style italic
    h2,p
        font-weight 100
        color #7f7f7f
    h2
        font-size 0.9em
        margin 0 0 15px 0
    p
        font-size 0.75em
        margin-bottom 15px

@media (max-width: 480px)
    .txt-juice
        text-align center
        width 100%
        margin 0
        right 0
        top 59%
        h2
            width 100%
        p
            width 86%
            margin-left 7%
