.footer
    width 90%
    margin-left 5%
    position absolute
    bottom 5%
    display flex
    justify-content space-between
    align-items center
    z-index 9

.social-icons
    display inline-flex

.copyright
    font-size 0.67em
    color #aaaaaa

.m-0-25
    margin 0 25px

.countrie-img
    width 10%
    margin-left 10px
    margin-bottom -2px


.circle-link {
    position: relative;
    text-align: center;
    color: #000;
    transition: all 0.3s;
    backface-visibility: hidden;
    -webkit-font-smoothing: subpixel-antialiased;
    &:hover svg path {
        stroke-dashoffset: 0;
    }
    &:active i {
        transform: scale(1.1) translateZ(0);
    }
    i {
        transition: transform 0.3s;
        font-size: 20px;
    }
    svg {
        position: absolute;
        & path {
        stroke: #667;
        stroke-width: 2;
        fill: none;
        transition: all 0.3s;
        stroke-dashoffset: 205;
        stroke-dasharray: 205;
        }
    }
    &.twitter {
        &:hover {
        color: #0084b4;
        }
        & svg {
            top: -16px;
            left: -16px
        }
        & svg path {
        stroke: #0084b4;
        }
    }
    &.facebook {
        &:hover {
            color: #3b5998;
        }
        & svg {
            top: -16px;
            left: -18px
        }
        & svg path {
            stroke: #3b5998;
        }
        
    }
    &.instagram {
        &:hover {
        color: #833AB4;
        }
        & svg {
            top: -16px;
            left: -16px
        }
        & svg path {
            stroke: #833AB4;
        }
    }

}

@media (max-width: 480px)
    .footer
        flex-direction column
        display flex
    .footer
        width 100%
        margin-left 0    