swiper
    height 80vh
    width 100%
    margin auto

.swiper-slide
    text-align center
    img
        width 74%
        margin-top -9px
    
.swiper-pagination
    bottom 5px !important

.swiper-button-next, 
.swiper-button-prev
    height 14px
    top 41.5%
    background-image: none

.swiper-button-prev
    left 5%

.swiper-button-next
    right 5%
    
.swiper-button-prev::after,
.swiper-button-next::after
    content "."
    border 1px solid #eaeaea
    padding 10px
    border-radius 50%
    width 25px
    height 25px
    display block
    margin -10px
    color #fff

.swiper-button-prev::after
    margin: -30px 0 0 -9px;

.swiper-button-next::after
    margin: -30px 0 0 -12px;

.swiper-button-next, 
.swiper-button-prev 
    .fas
        font-size: 0.6em;
        text-align center
        width 26px

.pag-number
    position absolute
    right 20.4%
    top 10%
    font-family 'Roboto', sans-serif

.number-1
    font-size 2.9em
    margin-right 3px

.number-2
    font-size 1.4em
    color #bcbcbc
    position relative
    top -10px

.num-0-1
    color #ffb504

.subtit-sldr
    color #ea78cf
    font-size 1.1em
    position absolute
    left 24.2%
    top 15%
    font-weight 100
    font-family 'Open Sans', sans-serif
    width 120px
    text-align left

.shipping
    font-size 0.57em
    background #000000
    border-radius 10px
    width 210px
    height 42px 
    color #fff
    display flex
    justify-content center
    align-content center
    align-items center
    position absolute
    top 70%
    left 20%
    text-transform: uppercase;

.shipping img
    width 6%
    margin-left 7px
    margin-top -0.05em

.backg-0
    background #ffb504
    width 100%
    height 100vh
    position absolute
    left 0
    top 0
    z-index -9

.backg-1
    background #fff
    width 97.5%
    height 95vh
    display flex
    justify-content center
    align-content center
    align-items center
    z-index -8
    padding 10px
    border-radius 1%
    margin-left 0.54%
    margin-top 0.47%