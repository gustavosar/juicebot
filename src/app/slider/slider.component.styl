swiper
    height 80vh
    width 100%
    margin auto
    margin-top -10px

.swiper-slide
    text-align center

.bottle-img
    width 74%
    margin-top -9px
    
.swiper-pagination
    bottom 1px !important
    display flex
    justify-content center
    align-content center
    align-items center

.swiper-button-next
.swiper-button-prev
    display flex
    justify-content center
    align-content center
    align-items center
    width 40px
    height 40px
    border 1px solid #eaeaea
    border-radius 50%
    background-image none !important
    top 40%

.swiper-button-next
    right 3%

.swiper-button-prev
    left 3%

.swiper-button-prev::after
    margin -30px 0 0 -9px

.swiper-button-next::after
    margin -30px 0 0 -12px

.swiper-button-next
.swiper-button-prev 
    .fas
        font-size 0.6em

.pag-number
    position absolute
    right 20.4%
    top 10%
    font-family 'Roboto', sans-serif

.number-1
    font-size 2.9em
    margin-right 3px

.number-2
    font-size 1.4em
    color #bcbcbc
    position relative
    top -10px

.subtit-sldr
    color #ea78cf
    font-size 1.1em
    position absolute
    left 24.2%
    top 15%
    font-weight 100
    font-family 'Open Sans', sans-serif
    width 120px
    text-align left
